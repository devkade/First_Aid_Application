<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation='vertical'>

    <ImageButton
        android:id="@+id/cprImageButton"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cpr" />

    <Button
        android:id="@+id/cprButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="필수 응급 처치"
        app:layout_constraintEnd_toEndOf="@+id/cprImageButton"
        app:layout_constraintStart_toStartOf="@+id/cprImageButton"
        app:layout_constraintTop_toBottomOf="@+id/cprImageButton" />

    <ImageButton
        android:id="@+id/biteimageButton"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bite_mark" />

    <Button
        android:id="@+id/biteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동물/곤충에 물렸을 때"
        app:layout_constraintEnd_toEndOf="@+id/biteimageButton"
        app:layout_constraintStart_toStartOf="@+id/biteimageButton"
        app:layout_constraintTop_toBottomOf="@+id/biteimageButton" />

    <ImageButton
        android:id="@+id/foreignbodyImageButton"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/cprImageButton"
        app:layout_constraintStart_toStartOf="@+id/cprImageButton"
        app:layout_constraintTop_toBottomOf="@+id/cprButton"
        app:srcCompat="@drawable/foreign_body" />

    <Button
        android:id="@+id/foreignbodyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이물질"
        app:layout_constraintEnd_toEndOf="@+id/foreignbodyImageButton"
        app:layout_constraintStart_toStartOf="@+id/foreignbodyImageButton"
        app:layout_constraintTop_toBottomOf="@+id/foreignbodyImageButton" />

    <ImageButton
        android:id="@+id/poisonImageButton"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/biteimageButton"
        app:layout_constraintStart_toStartOf="@+id/biteimageButton"
        app:layout_constraintTop_toBottomOf="@+id/biteButton"
        app:srcCompat="@drawable/poison" />

    <Button
        android:id="@+id/poisonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="독극물 중독"
        app:layout_constraintEnd_toEndOf="@+id/poisonImageButton"
        app:layout_constraintStart_toStartOf="@+id/poisonImageButton"
        app:layout_constraintTop_toBottomOf="@+id/poisonImageButton" />

    <ImageButton
        android:id="@+id/fireiceImageButton"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/foreignbodyImageButton"
        app:layout_constraintStart_toStartOf="@+id/foreignbodyImageButton"
        app:layout_constraintTop_toBottomOf="@+id/foreignbodyButton"
        app:srcCompat="@drawable/fire_and_ice" />

    <Button
        android:id="@+id/fireiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="열/냉에 의한 손상"
        app:layout_constraintEnd_toEndOf="@+id/fireiceImageButton"
        app:layout_constraintStart_toStartOf="@+id/fireiceImageButton"
        app:layout_constraintTop_toBottomOf="@+id/fireiceImageButton" />

    <ImageButton
        android:id="@+id/importantsymptomImageButton"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/poisonImageButton"
        app:layout_constraintStart_toStartOf="@+id/poisonImageButton"
        app:layout_constraintTop_toBottomOf="@+id/poisonButton"
        app:srcCompat="@drawable/myocardial_infarction" />

    <Button
        android:id="@+id/importantsymptomButtom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중요 질환 응급 처치"
        app:layout_constraintEnd_toEndOf="@+id/importantsymptomImageButton"
        app:layout_constraintStart_toStartOf="@+id/importantsymptomImageButton"
        app:layout_constraintTop_toBottomOf="@+id/importantsymptomImageButton" />
</androidx.constraintlayout.widget.ConstraintLayout>